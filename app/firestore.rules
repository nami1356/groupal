service cloud.firestore {
  match /databases/{database}/documents {
    match /users/{userID} {
      allow read: if request.auth != null;
      allow write: if request.auth.email == userID;

      match {allChildren=**} {
        allow read: if request.auth != null;
        allow write: if request.auth.email == userID;
      }
    }
  match /group/{groupID} {
    allow read, write:
  }
  match /tags/{tagID} {
    allow read, write:
  }
  }
}
